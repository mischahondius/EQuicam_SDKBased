<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:weightSum="1"
    android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="fill_horizontal|bottom"
            android:layout_margin="1dp"
            android:baselineAligned="true"
            android:divider="#ff8b000f"
            android:dividerPadding="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Camera DDNS Url:"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cameraURLeditText"
                    android:autoText="false"
                    android:editable="true"
                    android:textIsSelectable="true"
                    android:textColorHighlight="#ffc40015"
                    android:selectAllOnFocus="true"
                    android:inputType="textUri|textAutoComplete"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/textView2" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:baselineAligned="true"
            android:gravity="fill_horizontal|bottom"
            android:layout_margin="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/videoPoortTVStr"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/cameraURLeditText"
                    android:layout_toLeftOf="@+id/cameraURLeditText" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poortEditText"
                    android:editable="true"
                    android:layout_alignTop="@+id/textView3"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView3" />
            </RelativeLayout>
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="true"
        android:gravity="fill_horizontal|bottom"
        android:layout_margin="1dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gebruikersnaam:"
                android:id="@+id/textView4"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cameraURLeditText"
                android:layout_toLeftOf="@+id/cameraURLeditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:editable="true"
                android:layout_alignTop="@+id/textView4"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView4" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="true"
        android:gravity="fill_horizontal|bottom"
        android:layout_margin="1dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Wachtwoord:"
                android:id="@+id/textView5"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cameraURLeditText"
                android:layout_toLeftOf="@+id/cameraURLeditText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:editable="true"
                android:layout_alignTop="@+id/textView5"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView5" />
        </RelativeLayout>
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opslaan "
            android:id="@+id/camerasSubmitBtn"
            android:layout_gravity="right"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</LinearLayout>
