<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:weightSum="1"
    android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="fill_horizontal|bottom"
            android:layout_margin="1dp"
            android:baselineAligned="true"
            android:divider="#ff8b000f"
            android:dividerPadding="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/urlTVstr"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cameraURLeditText"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:hint="@string/urlHintStr"
                    android:textSize="12sp"
                    android:singleLine="true" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:baselineAligned="true"
            android:gravity="fill_horizontal|bottom"
            android:layout_margin="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/videoPoortTVStr"
                    android:id="@+id/textView3"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/poortEditText"
                    android:layout_alignTop="@+id/textView3"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/textView3"
                    android:hint="@string/poortHintStr"
                    android:textSize="12sp"
                    android:singleLine="true" />
            </RelativeLayout>
        </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="true"
        android:gravity="fill_horizontal|bottom"
        android:layout_margin="1dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/gebruikersnaamTVstr"
                android:id="@+id/textView4"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gebruikersNaamET"
                android:layout_alignTop="@+id/textView4"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView4"
                android:hint="@string/gebruikersnaamHintStr"
                android:textSize="12sp"
                android:singleLine="true" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:baselineAligned="true"
        android:gravity="fill_horizontal|bottom"
        android:layout_margin="1dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wachtWoordTVstr"
                android:id="@+id/textView5"
                android:layout_marginTop="5dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wwET"
                android:editable="false"
                android:layout_alignTop="@+id/textView5"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView5"
                android:hint="@string/wwHintStr"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:singleLine="true" />
        </RelativeLayout>
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opslaanBtnStr"
            android:id="@+id/camerasSubmitBtn"
            android:layout_gravity="right"
            android:padding="10dp"
             android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:onClick="onSubmit" />

    </RelativeLayout>


</LinearLayout>
